generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
  output        = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  schemas  = ["Tasks", "Recipes", "Users"]
}

model Task {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String?
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  priority    Int      @default(3)
  isFinished  Boolean  @default(false)

  @@schema("Tasks")
}

model Category {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?
  tasks       Task[]

  @@schema("Tasks")
}

model Recipe {
  id                 Int          @id @default(autoincrement())
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
  name               String
  typeId             Int
  type               RecipeType   @relation(fields: [typeId], references: [id])
  cookingDescription String
  ingredients        Ingredient[]

  @@schema("Recipes")
}

model RecipeType {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  recipes     Recipe[]

  @@schema("Recipes")
}

model Ingredient {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  quantity  Float
  unit      String
  recipeId  Int
  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@schema("Recipes")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  firstName String
  lastName  String
  email     String    @unique
  password  String
  // role      String // Will be added later

  @@schema("Users")
}
